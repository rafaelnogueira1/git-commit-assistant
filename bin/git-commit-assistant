#!/usr/bin/env node

const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');
const os = require('os');

const packageRoot = path.join(__dirname, '..');
const venvPath = path.join(os.homedir(), '.git-commit-assistant-venv');
const isWindows = process.platform === 'win32';

// Get Python path from virtual environment
const pythonPath = path.join(
  venvPath,
  isWindows ? 'Scripts' : 'bin',
  isWindows ? 'python.exe' : 'python3'
);

// Check if virtual environment exists
if (!fs.existsSync(pythonPath)) {
  console.error(
    'Python virtual environment not found. Please reinstall the package.'
  );
  process.exit(1);
}

// Execute the Python script
const pythonProcess = spawn(
  pythonPath,
  [
    path.join(packageRoot, 'git_commit_assistant/main.py'),
    ...process.argv.slice(2),
  ],
  {
    stdio: 'inherit',
    cwd: process.cwd(), // Preserve user's current working directory
  }
);

pythonProcess.on('error', (err) => {
  console.error('Failed to start Python process:', err);
  process.exit(1);
});

pythonProcess.on('close', (code) => {
  process.exit(code);
});
